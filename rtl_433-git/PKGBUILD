# Maintainer: Dominik Heidler <dheidler@gmail.com>
pkgname=rtl_433-git
pkgver=20130206
pkgrel=1
pkgdesc="Turns your Realtek RTL2832 based DVB dongle into a 433.92MHz generic data receiver"
arch=('i686' 'x86_64')
license=('GPL')
depends=('rtl-sdr')
makedepends=('git' 'gcc')
optdepends=()
provides=('rtl_433')
conflicts=('rtl_433')
url="https://github.com/merbanan/rtl_433"
source=('git://github.com/merbanan/rtl_433.git')
md5sums=('SKIP')

_gitname=rtl_433

build() {
	export PYTHON=python2
	cd ${srcdir}
	if [ -d $_gitname ]; then
		cd $_gitname && git reset HEAD --hard && git clean -x -d -f && git pull origin
		msg "Updated the local files."
	else
		git clone $_gitroot
		msg "GIT checkout done or server timeout"
		cd $_gitname
	fi
	msg "Starting build."
	cd src
	# This must be done that way, to link against installed librtlsdr
	gcc rtl_433.c `pkg-config --cflags librtlsdr` `pkg-config --libs librtlsdr` -O3 -o rtl_433
}

package() {
	cd $srcdir/$_gitname/src
	mkdir -p $pkgdir/usr/bin
	install -m755 rtl_433 $pkgdir/usr/bin
}
