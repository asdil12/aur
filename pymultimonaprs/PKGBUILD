pkgname=pymultimonaprs
pkgver=0.7.2
pkgrel=1
pkgdesc="HF2APRS-IG Gateway"
arch=(any)
url="https://github.com/asdil12/pymultimonaprs"
license=('GPL')
groups=()
provides=()
depends=('python2' 'multimon-ng-git' 'rtl-sdr')

source=("$pkgname-$pkgver.tar.gz::https://nodeload.github.com/asdil12/pymultimonaprs/tar.gz/$pkgver")
md5sums=('ccac3c130b4e46fc36d2f1dc588287db')

package() {
	cd $srcdir/$pkgname-$pkgver
	python2 setup.py install --optimize=1 --prefix=/usr --root=$pkgdir
}
